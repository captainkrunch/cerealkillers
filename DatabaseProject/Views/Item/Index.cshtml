@model IEnumerable<DatabaseProject.Models.Item>

@{
    ViewBag.Title = "Index";
}

<h2>Available Items</h2>
<div>
    <br />
</div>
<p>
    @Html.ActionLink("Add an Item", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayName("Item ID")
        </th>
        <th>
            @Html.DisplayName("Event ID")
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th>
            @Html.DisplayName("Starting Bid")
        </th>
        <th>
            @Html.DisplayName("Bid Increment")
        </th>
        <th>
            @Html.DisplayName("Won Bid Amount")
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Value)
        </th>
        <th>
            @Html.DisplayName("Buy It Now Price")
        </th>
        <th>
            @Html.DisplayName("Pay Time")
        </th>
        <th>
            @Html.DisplayName("Pay Method")
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.ItemID)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.EventID)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Description)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Start_Bid)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Bid_Increment)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.WonBidAmount)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Value)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.BuyItNowPrice)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PayTime)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PayMethod)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.ItemID }) |
            @Html.ActionLink("Details", "Details", new { id=item.ItemID }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.ItemID })
        </td>
    </tr>
}

</table>

<div>
    @Html.ActionLink("Back to Home Page", "Index", "Home")
</div>
